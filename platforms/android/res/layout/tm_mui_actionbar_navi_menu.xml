<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mui_c1_a80"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_item_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tm_navi_menu_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="28dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <com.tmall.wireless.mui.TMIconFontTextView
            android:id="@+id/menu_refresh_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/menu_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/navi_menu_refresh"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#555555" />

    <LinearLayout
        android:id="@+id/menu_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tm_navi_menu_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="28dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <com.tmall.wireless.mui.TMIconFontTextView
            android:id="@+id/menu_share_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/menu_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/navi_menu_share"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#555555" />

    <LinearLayout
        android:id="@+id/menu_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tm_navi_menu_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="28dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <com.tmall.wireless.mui.TMIconFontTextView
            android:id="@+id/menu_message_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/menu_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/navi_menu_message"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/menu_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tm_icon_messsage"
            android:layout_marginLeft="15dp"
            android:padding="2dp"
            android:text="10"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#555555" />

    <LinearLayout
        android:id="@+id/menu_item_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tm_navi_menu_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="28dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <com.tmall.wireless.mui.TMIconFontTextView
            android:id="@+id/menu_search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/menu_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/navi_menu_search"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#555555" />

    <LinearLayout
        android:id="@+id/menu_item_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tm_navi_menu_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="28dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <com.tmall.wireless.mui.TMIconFontTextView
            android:id="@+id/menu_home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/menu_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/navi_menu_home"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>