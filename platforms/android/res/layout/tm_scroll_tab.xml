<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mui_c7">

    <ImageView
        android:id="@+id/tm_scroll_tab_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/mui_c7"
        android:clickable="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:src="@drawable/tm_mui_main_tab_btn_down" />

    <HorizontalScrollView
        android:id="@+id/tm_scroll_tab_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tm_scroll_tab_menu_btn"
        android:background="@color/mui_c7"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/tm_scroll_tab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/tm_scroll_tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/tm_scroll_tab_cursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tm_mui_tab_bar_indicator" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mui_c5" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>