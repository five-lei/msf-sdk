<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义loading dialog -->
    <style name="tm_loading_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFullscreen">true</item> <!-- 全屏展示 -->
        <item name="android:windowFrame">@null</item> <!-- Dialog的windowFrame框为无 -->
        <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
        <item name="android:windowBackground">@color/transparent</item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item> <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
       <!-- <item name="android:windowContentOverlay">@null</item>  也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 背景是否模糊显示 -->
    </style>

    <style name="TMPopWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/tm_window_grow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/tm_window_shrink_fade_out</item>
    </style>

